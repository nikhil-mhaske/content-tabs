{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "create-block/content-tabs",
  "version": "0.1.0",
  "title": "Content Tabs",
  "category": "widgets",
  "icon": "welcome-widgets-menus",
  "keywords": [
    "Tabs"
  ],
  "description": "Create Block to showcase content in Tabs",
  "supports": {
    "html": false
  },
  "attributes": {
    "tabs": {
      "type": "array",
      "default": [
        {
          "title": "Tab 1",
          "content": "Tab 1 content"
        },
        {
          "title": "Tab 2",
          "content": "Tab 2 content"
        }
      ]
    },
    "layout": {
      "type": "string",
      "default": "horizontal"
    },
    "tabListFontSize": {
      "type": "number"
    },
    "tabContentFontSize": {
      "type": "number"
    }
  },
  "textdomain": "content-tabs",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}